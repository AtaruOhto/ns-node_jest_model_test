{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./app",
    "baseUrl": "./",
    "lib": ["es6","dom", "es2015.promise", "es5"],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "*"
      ]
    }
  },
  "include": [
    ".src/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"

  ],
  "files": [
    "src/index.ts"
  ]
}
